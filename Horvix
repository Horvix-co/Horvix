    <script>
        document.getElementById('languageBtn').addEventListener('click', function() {
            document.getElementById('languageDropdown').classList.toggle('show');
        });
        
        document.querySelectorAll('.language-option').forEach(option => {
            option.addEventListener('click', function() {
                const selectedLang = this.getAttribute('data-lang');
                
                document.querySelectorAll('.language-option i.fa-check').forEach(icon => {
                    icon.className = 'fas';
                });
                
                this.querySelector('i').className = 'fas fa-check';
                
                document.querySelector('#languageBtn span').textContent = this.querySelector('span').textContent;
                
                document.getElementById('languageDropdown').classList.remove('show');
                
                console.log(`Til o'zgartirildi: ${selectedLang}`);
            });
        });
        
        window.addEventListener('click', function(e) {
            if (!e.target.matches('#languageBtn') && !e.target.closest('#languageBtn')) {
                const dropdown = document.getElementById('languageDropdown');
                if (dropdown.classList.contains('show')) {
                    dropdown.classList.remove('show');
                }
            }
        });
    </script>
